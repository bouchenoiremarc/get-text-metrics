{
  "name": "typometer",
  "version": "2.1.2",
  "description": "Measure text asynchronously.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/marcbouchenoire/typometer",
  "homepage": "https://typometer.marcbouchenoire.com",
  "keywords": [
    "measure",
    "text",
    "metrics",
    "canvas",
    "offscreen"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "modern": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.module.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "prettier": "@marcbouchenoire/prettier-config",
  "nano-staged": {
    "**/*.mjs": [
      "eslint --fix",
      "yarn prettier"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsatsiki --project tsconfig.json",
      "yarn prettier"
    ],
    "**/*.{json,md,yml}": [
      "yarn prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "nano-staged"
    }
  },
  "scripts": {
    "build": "rollup --config",
    "nano-staged": "nano-staged",
    "prettier": "prettier --write --loglevel silent --ignore-path .eslintignore",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{mjs,ts,tsx}' --fix",
    "lint:prettier": "yarn prettier '**/*.{mjs,ts,tsx,json,md,yml}'",
    "lint:tsc": "tsc --project tsconfig.json",
    "prepublishOnly": "yarn build",
    "test": "wtr",
    "test:coverage": "yarn test --coverage"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/offscreencanvas": "^2019.6.4",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-rollup": "^0.3.13",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-puppeteer": "^0.10.4",
    "esbuild": "^0.13.15",
    "estree-walker": "^3.0.0",
    "magic-string": "^0.25.7",
    "rollup": "^2.60.1",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-esbuild": "^4.7.2",
    "uvu": "^0.5.2"
  }
}
