{
  "name": "typometer",
  "version": "2.1.2",
  "description": "Measure text asynchronously.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/marcbouchenoire/typometer",
  "homepage": "https://typometer.marcbouchenoire.com",
  "keywords": [
    "measure",
    "text",
    "metrics",
    "canvas",
    "offscreen"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "modern": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.module.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rollup --config",
    "prettier": "prettier --write --loglevel silent --ignore-path .eslintignore",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{mjs,ts,tsx}' --fix",
    "lint:prettier": "yarn prettier '**/*.{mjs,ts,tsx,json,md}'",
    "lint:tsc": "tsc --project tsconfig.json",
    "prepublishOnly": "yarn build",
    "test": "wtr",
    "test:coverage": "yarn test --coverage"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/offscreencanvas": "^2019.7.0",
    "@web/dev-server-esbuild": "^0.3.1",
    "@web/dev-server-rollup": "^0.3.18",
    "@web/test-runner": "^0.13.31",
    "@web/test-runner-puppeteer": "^0.10.5",
    "esbuild": "^0.14.47",
    "estree-walker": "^3.0.1",
    "magic-string": "^0.26.2",
    "rollup": "^2.75.7",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "uvu": "^0.5.4"
  }
}
