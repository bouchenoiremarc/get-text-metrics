{
  "name": "typometer",
  "version": "2.0.0",
  "description": "Measure text using the Canvas API.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/typometer",
  "keywords": [
    "measure",
    "text",
    "metrics",
    "canvas",
    "offscreen"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/typometer.js",
  "unpkg": "./dist/typometer.umd.js",
  "module": "./dist/typometer.module.js",
  "exports": {
    ".": {
      "require": "./dist/typometer.js",
      "import": "./dist/typometer.module.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "prettier": "@bouchenoiremarc/prettier-config",
  "lint-staged": {
    "**/*.mjs": [
      "eslint --fix",
      "prettier --ignore-path .eslintignore --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsatsiki --project tsconfig.json",
      "prettier --ignore-path .eslintignore --write"
    ],
    "**/*.{json,md,yml}": [
      "prettier --ignore-path .eslintignore --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "build": "rollup --config",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{mjs,ts,tsx}' --fix",
    "lint:prettier": "prettier '**/*.{mjs,ts,tsx,json,md,yml}' --ignore-path .eslintignore --write --loglevel silent",
    "lint:tsc": "tsc --project tsconfig.json",
    "prepublishOnly": "yarn build",
    "release": "yarn login && np",
    "test": "wtr",
    "test:coverage": "yarn test --coverage"
  },
  "devDependencies": {
    "@bouchenoiremarc/eslint-config": "^2.2.1",
    "@bouchenoiremarc/prettier-config": "^1.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/offscreencanvas": "^2019.6.4",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-rollup": "^0.3.13",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-puppeteer": "^0.10.4",
    "camelcase": "^6.2.1",
    "esbuild": "^0.13.15",
    "eslint": "^8.3.0",
    "estree-walker": "^3.0.0",
    "husky": "4.3.8",
    "lint-staged": "^12.1.2",
    "magic-string": "^0.25.7",
    "np": "^7.6.0",
    "prettier": "^2.4.1",
    "rollup": "^2.60.1",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-esbuild": "^4.7.2",
    "tsatsiki": "^1.0.1",
    "typescript": "^4.5.2",
    "uvu": "^0.5.2"
  }
}
