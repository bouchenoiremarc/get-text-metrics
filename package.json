{
  "name": "get-text-metrics",
  "version": "1.3.0",
  "description": "Measure text using the Canvas API.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/get-text-metrics",
  "keywords": [
    "measure",
    "text",
    "metrics",
    "canvas"
  ],
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/get-text-metrics.js",
  "unpkg": "./dist/get-text-metrics.umd.js",
  "module": "./dist/get-text-metrics.module.js",
  "exports": {
    ".": {
      "require": "./dist/get-text-metrics.js",
      "import": "./dist/get-text-metrics.modern.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsc-mixed --project tsconfig.json",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "build": "microbundle --tsconfig tsconfig.build.json",
    "clean": "jest --clearCache && rimraf dist node_modules",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{ts,tsx}' --fix",
    "lint:prettier": "prettier --write '**/*.{ts,tsx}' --loglevel silent",
    "lint:tsc": "tsc --project tsconfig.json",
    "prepare": "rimraf dist && yarn build",
    "release": "yarn login && np",
    "test": "jest"
  },
  "devDependencies": {
    "@bouchenoiremarc/eslint-config": "^1.6.0",
    "@swc-node/jest": "^1.3.1",
    "@types/jest": "^27.0.1",
    "@types/offscreencanvas": "^2019.6.3",
    "eslint": "^8.0.1",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "jest-electron": "^0.1.11",
    "lint-staged": "^11.0.0",
    "microbundle": "^0.13.0",
    "node-fetch": "^3.0.0",
    "np": "^7.5.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tsc-mixed": "^1.0.0",
    "typescript": "^4.2.4"
  }
}
