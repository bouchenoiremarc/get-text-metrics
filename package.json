{
  "name": "get-text-metrics",
  "version": "1.4.0",
  "description": "Measure text using the Canvas API.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/get-text-metrics",
  "keywords": [
    "measure",
    "text",
    "metrics",
    "canvas",
    "offscreen"
  ],
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/get-text-metrics.js",
  "unpkg": "./dist/get-text-metrics.umd.js",
  "module": "./dist/get-text-metrics.module.js",
  "exports": {
    ".": {
      "require": "./dist/get-text-metrics.js",
      "import": "./dist/get-text-metrics.module.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsc-mixed --project tsconfig.json",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "build": "rollup --config",
    "clean": "jest --clearCache && rimraf dist node_modules",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{ts,tsx}' --fix",
    "lint:prettier": "prettier --write '**/*.{ts,tsx}' --loglevel silent",
    "lint:tsc": "tsc --project tsconfig.json",
    "prepare": "rimraf dist && yarn build",
    "release": "yarn login && np",
    "test": "jest"
  },
  "devDependencies": {
    "@bouchenoiremarc/eslint-config": "^2.0.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@swc/core": "^1.2.103",
    "@types/jest": "^27.0.1",
    "@types/offscreencanvas": "^2019.6.4",
    "camelcase": "^6.2.0",
    "deasync": "^0.1.23",
    "eslint": "^8.2.0",
    "estree-walker": "^2.0.2",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "jest-electron": "^0.1.11",
    "lint-staged": "^11.0.0",
    "magic-string": "^0.25.7",
    "np": "^7.5.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-dts": "^4.0.0",
    "tsc-mixed": "^1.0.0",
    "typescript": "^4.4.4"
  }
}
